- unless @stubble.new_record?
  %dl
    %dt Stubble
    %dd.url
      = '&lt;URL:' + link_to(wrap(stubble_url(@stubble)), stubble_path(@stubble)) + '&gt;'
      = "[#{h @stubble.url.host}]"
    
    %dt Original URL
    %dd.url= link_to wrap(@stubble.url), @stubble.url
    
    %dt Stubbliness
    %dd= '%.0f%%' % @stubble.stubbliness
    
    %dt Hits
    %dd= numerify(@stubble.view_count)
